CREATE DATABASE university

# mappings --- 0 is one to one, 1 is one to many, 2 is many to one, 3 is many to many:
 
CREATE TABLE students
{
	"firstName": 
	{
		"type": "string",
		"reference": "name"
	},
	"lastName": 
	{
		"type": "string",
		"reference": "name"
	},
	"age":
	{
		"type": "number",
		"reference": "age"
	}
}

CREATE TABLE courses
{
	"name":
	{
		"type": "string",
		"reference": "general"
	},
	"credits":
	{
		"type": "number",
		"reference": "general"
	}
}

CREATE TABLE departments
{
	"name":
	{
		"type": "text",
		"reference": "name"
	},
}

CREATE TABLE course_students
{
	"student":
	{
		"type": "mapping",
		"points": "students",
	},
	"course":
	{
		"type": "mapping",
		"points": "courses"
	}
}

CREATE TABLE course_departments
{
	"course":
	{
		"type": "mapping",
		"points": "courses"
	},
	"department":
	{
		"type": "mapping",
		"points": "departments"
	}
}
